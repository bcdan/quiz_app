<script src="/getapi.js" async></script>
<div class="container">
    <div class="jumbotron">
        <%- include ('./partials/messages') %>
        <div class="text-center">
            <h1><i class="fas fa-list-ol"></i> Edit exam</h1>
        </div>
        <div class="row">
            <div class="col-md-12 text-right">
                <a class="btn btn-info float" href="/teachers/myexams/<%=user.id%>" role="button"><i class="fas fa-arrow-circle-left"></i>
                    BACK</a>
                <div id="alert"></div>
            </div>
        </div>



        <form>
            <div class="form-group">
              <label for="examtitle">Title</label>
              <input type="text" class="form-control" id="examtitle" aria-describedby="examtitle" value="<%=exam.title%>">
            </div>
            <div class="form-group">
              <label for="duration">Duration</label>
              <input type="number" class="form-control" min=0 id="duration" value="<%=exam.duration%>">
            </div>
            <div class="form-group">
                <label for="date">Date</label>
                <input type="text" class="form-control" id="date" aria-describedby="date" value="<%=exam.date%>">
            </div>
            <hr>
            <% for(let i = 0 ; i< questions.length;i++) {%>
                <div class="form-group">
                    <label for="question_<%=i%>">Question</label>
                    <input type="text" class="form-control" id="question_<%=i%>" aria-describedby="question_<%=i%>" value="<%=questions[i].title%>">
                  </div>
      
            <%}%>
            <hr>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>


    </div>
</div>

